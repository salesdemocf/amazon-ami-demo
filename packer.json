{
    "variables": {
      "aws_access_key": "",
      "aws_secret_key": ""
    },
    "provisioners": [
      {
        "type": "shell",
        "inline": [
          "sleep 15",
          "sudo apt-get update",
          "sudo apt-get install -y aptitude python"
        ]
      },
      {
        "type": "ansible",
        "extra_arguments": [
          "--become",
          "--become-method=sudo",
          "--become-user=ec2-user"
        ],
        "user": "ec2-user",
        "playbook_file": "../ansible-playbooks/setup_ubuntu1804/playbook.yml"
      },
      {
        "type": "ansible",
        "extra_arguments": [
          "--become",
          "--become-method=sudo",
          "--become-user=ec2-user"
        ],
        "user": "ec2-user",
        "playbook_file": "../ansible-playbooks/apache_ubuntu1804/playbook.yml"
      }
    ],
    "builders": [
      {
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}",
        "secret_key": "{{user `aws_secret_key`}}",
        "region": "us-west-2",
        "source_ami_filter": {
          "filters": {
            "virtualization-type": "hvm",
            "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
            "root-device-type": "ebs"
          },
          "owners": ["099720109477"],
          "most_recent": true
        },
        "instance_type": "t2.micro",
        "ssh_username": "ubuntu",
        "ami_name": "packer-example {{timestamp}}"
      }
    ],
    "post-processors": [
      {
        "type": "manifest",
        "output": "manifest.json",
        "strip_path": true
      }
    ]
  }